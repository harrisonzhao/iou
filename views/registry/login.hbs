    <body>
      <!--login modal-->
      <div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <!-- remove close button for now -->
              <!-- <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button> -->
              <h1 class="text-center">Login</h1>
            </div>
            <div class="modal-body">
              <form id="login-form" class="form col-md-12 center-block">
                <div class="form-group">
                  <input id="username" type="username" class="form-control input-lg" placeholder="Username">
                </div>
                <div class="form-group">
                  <input id="password" type="password" class="form-control input-lg" placeholder="Password">
                </div>
                <div class="form-group">
                  <button id="submit-login" class="btn btn-primary btn-lg btn-block">Sign In</button>
                  <!--Remove need help-->
                  <span class="pull-right"><a href="/signup">Signup</a></span>

                  <!-- show any messages that come back with authentication -->
                  {{#if error}}
                    <div class="alert alert-danger">{{error}}</div>
                  {{/if}}

                </div>
              </form>
            </div>
            <div class="modal-footer">
              <!-- <div class="col-md-12">
                <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
              </div> -->
            </div>
          </div>
        </div>
